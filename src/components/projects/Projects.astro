---
import CardProject from "./CardProject.astro";
import React from "../technologies/React.astro";
import Tailwind from "../technologies/Tailwind.astro";
import Next from "../technologies/Next.astro";
import GraphQL from "../technologies/GraphQL.astro";
import MySQL from "../technologies/MySQL.astro";
import Laravel from "../technologies/Laravel.astro";
import PHP from "../technologies/PHP.astro";
import Redux from "../technologies/Redux.astro";
import { Image } from 'astro:assets';
import project1 from '../../images/project1.png'
import project2 from '../../images/portafolio/project2.png'

import project3 from '../../images/portafolio/project3.png'
---
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <div id="projects" style="scroll-margin-top: 120px;" class="max-w-3xl ml-auto mr-auto px-8 my-4">
        <h1 class="text-3xl font-bold">Recent <span class="text-blue-500">Projects</span></h1>
        <p class="text-xl my-4">Here are some of my projects</p>
        <div class="flex flex-wrap max-w-3xl gap-8">
        <CardProject>
            <p slot="title">UI/UX Design</p>
            <span slot="description">Hecho con Tailwind y React para ofrecer al usuario una mejor experiencia de UI y UX</span>
            <figure slot="image" class="w-full">
                <Image src={project1} class="rounded min-w-sm" alt="portafolio">

            </figure>
            <div class="w-full justify-around gap-8 flex" slot ="technologies">
            <React />
            <Tailwind/>
              </div>
        </CardProject>
        <CardProject>
            <p slot="title">Sistema de Academia</p>
            <span slot="description">Hecho para academias o escuelas, incluso universidades con varias tecnologias para manejar la base de datos y organizarla de diferentes maneras en tiempo real</span>
            <figure slot="image" class="w-full">
                <Image src={project2} class="rounded min-w-sm" alt="portafolio">

            </figure>
            <div class="w-full justify-around gap-8 flex" slot ="technologies">
            <PHP />
            <Tailwind/>
            <Laravel />
            <MySQL />
              </div>
        </CardProject>
        <CardProject>
            <p slot="title">Aplicacion del Clima</p>
            <span slot="description">Hecho para academias o escuelas, incluso universidades con varias tecnologias para manejar la base de datos y organizarla de diferentes maneras en tiempo real</span>
            <figure slot="image" class="w-full">
                <Image src={project3} class="rounded min-w-sm" alt="portafolio">

            </figure>
            <div class="w-full justify-around gap-8 flex" slot ="technologies">
            <React />
            <Tailwind/>
              </div>
        </CardProject>
            <div class=" w-full text-end">

                <a class="text-gray-500 hover:text-gray-200" href="#">See more</a>
            </div>
        </div>
    </div>
</body>
</html>